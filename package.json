{
  "name": "@soybeanjs/changelog",
  "type": "module",
  "version": "0.4.0-beta.1",
  "packageManager": "pnpm@10.26.2",
  "description": "generate changelog form git tags and commits for github",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/changelog",
  "repository": {
    "url": "https://github.com/soybeanjs/changelog.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/changelog/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "tsdown && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "soy release",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "soy ncu"
  },
  "dependencies": {
    "@soybeanjs/eslint-config": "1.7.5",
    "cli-progress": "3.12.0",
    "convert-gitmoji": "0.1.5",
    "dayjs": "1.11.19",
    "execa": "9.6.1",
    "ofetch": "1.5.1",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@soybeanjs/cli": "1.4.1",
    "@types/cli-progress": "3.11.6",
    "@types/node": "25.0.3",
    "@types/semver": "7.7.1",
    "eslint": "9.39.2",
    "lint-staged": "16.2.7",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.18.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}

{
  "name": "@soybeanjs/changelog",
  "type": "module",
  "version": "0.3.24",
  "packageManager": "pnpm@10.15.0",
  "description": "generate changelog form git tags and commits for github",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/changelog",
  "repository": {
    "url": "https://github.com/soybeanjs/changelog.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/changelog/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "engines": {
    "node": ">=16",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "tsup && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "soy release",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "soy ncu"
  },
  "dependencies": {
    "@soybeanjs/eslint-config": "^1.7.1",
    "cli-progress": "3.12.0",
    "convert-gitmoji": "0.1.5",
    "dayjs": "1.11.15",
    "execa": "9.6.0",
    "ofetch": "1.4.1",
    "semver": "7.7.2"
  },
  "devDependencies": {
    "@soybeanjs/cli": "1.4.0-beta.4",
    "@types/cli-progress": "3.11.6",
    "@types/node": "24.3.0",
    "@types/semver": "^7.7.0",
    "eslint": "9.34.0",
    "lint-staged": "16.1.5",
    "simple-git-hooks": "2.13.1",
    "tsup": "^8.5.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}

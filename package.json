{
  "name": "@soybeanjs/changelog",
  "type": "module",
  "version": "0.3.24",
  "packageManager": "pnpm@9.1.4",
  "description": "generate changelog form git tags and commits for github",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/changelog",
  "repository": {
    "url": "https://github.com/soybeanjs/changelog.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/changelog/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "engines": {
    "node": ">=16",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "tsup && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "soy release",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "soy ncu"
  },
  "dependencies": {
    "@soybeanjs/eslint-config": "^1.3.5",
    "cli-progress": "3.12.0",
    "convert-gitmoji": "0.1.5",
    "dayjs": "1.11.11",
    "execa": "9.5.1",
    "ofetch": "1.3.4",
    "semver": "7.6.2"
  },
  "devDependencies": {
    "@soybeanjs/cli": "1.0.14",
    "@types/cli-progress": "3.11.5",
    "@types/node": "20.12.13",
    "@types/semver": "^7.5.8",
    "eslint": "9.3.0",
    "lint-staged": "15.2.5",
    "simple-git-hooks": "2.11.1",
    "tsup": "^8.0.2",
    "tsx": "4.11.0",
    "typescript": "5.4.5"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}

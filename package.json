{
  "name": "@soybeanjs/changelog",
  "version": "0.2.2",
  "description": "generate changelog form git tags and commits for github",
  "author": {
    "name": "Soybean",
    "email": "honghuangdc@gmail.com",
    "url": "https://github.com/honghuangdc"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/changelog",
  "repository": {
    "url": "https://github.com/soybeanjs/changelog.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/changelog/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typecheck && unbuild && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "stub": "pnpm unbuild --stub",
    "lint": "eslint . --fix",
    "format": "soy prettier-write",
    "commit": "soy git-commit",
    "cleanup": "soy cleanup",
    "ncu": "soy ncu",
    "publish-pkg": "pnpm -r publish --access public",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "release": "soy release && pnpm build && pnpm publish-pkg",
    "prepare": "pnpm stub && pnpm -r run stub"
  },
  "dependencies": {
    "cli-progress": "3.12.0",
    "convert-gitmoji": "0.1.3",
    "dayjs": "1.11.9",
    "execa": "8.0.1",
    "ofetch": "1.2.0"
  },
  "devDependencies": {
    "@soybeanjs/cli": "0.6.7",
    "@types/cli-progress": "3.11.0",
    "@types/node": "20.5.2",
    "eslint": "8.47.0",
    "eslint-config-soybeanjs": "0.5.5",
    "simple-git-hooks": "2.9.0",
    "tsx": "3.12.7",
    "typescript": "5.1.6",
    "unbuild": "1.2.1"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm soy lint-staged"
  }
}
